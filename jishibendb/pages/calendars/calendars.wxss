.dateSelectView {
  border-radius: 50%;
  position: relative;
  left: 0;
  top: 0;
  color: #fff;
  background-color: #333;
}
.tianjia {
  position: fixed;
  bottom: 15rpx;
  right: 10rpx;
}
.tupian {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 8rpx;
}
.list-box {
  border-style: groove;
  position: fixed;
  bottom: 25rpx;
  top: 700rpx;
}

.item{
  position:relative;
  top: 0;
  width: 100%;
  height: 80rpx;
}
.item.content {
  position: absolute;
  border-style: ridge;
  font-size: 110%;
  font-style: oblique;
  transition: all 0.3s;
  display: flex;
  align-items: center;
}
.item .del-button {
  position: absolute;
  right: -280rpx;
  width: 140rpx;
  height: 112%;
  background-color: #df3448;
  color: #fff;
  top:4rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s;
  font-size: 24rpx;
}
.item .edit-button
{
  position: absolute;
  right: -140rpx;
  width: 140rpx;
  height: 112%;
  background-color: #333;
  color: Azure;
  top:4rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s;
  font-size: 24rpx;
}
.item.active .content{
  left: -50rpx;
}
.item.active .del-button{
  right: 0;
}
.item.active .edit-button
{
  right:140rpx;
}